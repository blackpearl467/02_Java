package edu.kh.variable.ex2;

public class PrintExample {
	//main 작성 ctrl+space+enter
	public static void main(String[] args) {
		//System.out.preint():단순 출력용 메서드(출력 후 줄바꿈 X)
		//System.out.println():한 줄 출력용 메서드(출력 후 줄바꿈 수행)
		//줄바꿈 여부 차이점은 있지만 괄호안의 내용이 그대로
		//출력된다는 것은 똑같음!
		
		//syso 작성 ctrl+space
		System.out.println("테스트1");
		System.out.println("테스트2");
		//실행 ctrl+f11
		
		System.out.print("테스트3");
		System.out.println(); //내용없는 println():단순 줄바꿈
		System.out.print("테스트4");
		
		// System.out.printf():출력될 문자열 형식을 패턴으로 지정하는 출력구문
		
		System.out.println(); //위에 print 구문 썻으니 줄바꿈 해줌

		int iNum1 =10;
		int iNum2 =5;
		
		//10+5=15
		System.out.println(iNum1 + "+" + iNum2 + "=" + (iNum1+iNum2)); //오타날수있음
		
		
		
		//10+5=15
		System.out.printf("%d + %d = %d", iNum1,iNum2,iNum1+iNum2);
	}
}
